<!DOCTYPE html>
<html>
  <head>
    <title><%=  title %></title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
  </head>
  <body class="container">

    <h1><%= title%></h1>
    <p>Bienvenido <%= title %></p>

    <div class="row">
      <div class="col-3">
        <form action="/" method="post">
          <input 
          type="text"
          name="nombre"
          placeholder="nombre"
          class="form-control mb-2"
          id="nombre"
          >
          <textarea
          type="text"
          name="descripcion"
          placeholder="descripcion"
          class="form-control mb-2"
          id="descripcion"
          rows="10"
          ></textarea>
          <button type="submit" id="btn-add" class="btn btn-info mb-2">Guardar</button>
          <a href="/" class="btn btn-secondary mb-2">Cancelar</a>
        </form>
      </div>
      <div class="col-8">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">nombre</th>
              <th scope="col">descripcion</th>
              <th scope="col">acciones</th>
            </tr>
          </thead>
          <tbody>
            <% results.forEach(element => { %>
            <tr>
              <th scope="row"><%= element.id %></th>
              <td><%= element.nombre %></td>
              <td><%= element.descripcion %></td>
              <td>
                <a href="/edit/<%= element.id %>" class="btn btn-warning">editar</a>
                <a href="/delete/<%= element.id %>" class="btn btn-danger">eliminar</a>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
